<div class="container">

  <%= link_to "Back to Pictures", pictures_url %> | 
  <%= link_to "Edit", edit_picture_path(@picture) %> | 
  <%= link_to "Delete", @picture, data: {:confirm => "Are you sure you want to delete this picture?", :method => :delete} %>

  <% if @picture.url %>
     <p><%= @picture[:title] %>, <%= @picture[:artist] %></p>
    <%= image_tag("#{@picture.url}") %>
  <% else %>
   <p><%= @picture[:title] %>, <%= @picture[:artist] %></p>
    <%= image_tag("#{@picture.image.url}") %>
  <% end %>

<h3>Comments: </h3>

  <% @picture.comments.each do |c| %>
      <p><%= c.content %><br/>
      <%= c.created_at %></p>
  <% end %>
  <p>
  <%=render :partial => "/comments/comment" %>
  </p>
</div>