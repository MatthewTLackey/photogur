<div class="container">

  <%= link_to "Back to Pictures", pictures_url %> | 
  <%= link_to "Edit", edit_picture_path(@picture) %> | 
  <%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>

  <p><%= @picture[:title] %>, <%= @picture[:artist] %></p>
  <img src="<%= @picture[:url] %>">

<h3>Comments: </h3>

  <% @picture.comments.each do |c| %>
    
      <p><%= c.content %><br/>
      <%= c.created_at %></p>
  <% end %>
  <p>
  <%=render :partial => "/comments/comment" %>
  </p>

</div>